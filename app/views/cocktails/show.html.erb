<h1>Recipe for a <%= @cocktail.name %></h1>

 <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.description %></td>
              <td><%= dose.ingredient.name %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

<p><%= link_to "Add a dose to that cocktail", new_cocktail_dose_path(@cocktail), class: "btn btn-primary btn-lg" %></p>

<p><%= link_to "Back to all cocktails", cocktails_path, class: "btn btn-primary btn-lg" %></p>

